// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `open default settings` command
// from the command palette or from `Zed` application menu.
{
  "assistant": {
    "default_model": {
      "provider": "zed.dev",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  "git": {
    "inline_blame": {
      "enabled": true
    }
  },
  "theme": "Evil Rabbit (Dark)",
  "buffer_font_size": 14,
  "ui_font_size": 14,
  "ui_font_family": "Inter Variable",
  "buffer_font_family": "Fira Code",
  "autosave": "on_focus_change",
  "enable_language_server": true,
  "languages": {
    "TypeScript": {
      "formatter": "language_server"
    }
  },
  "terminal": {
    "font_size": 13
  },
  "experimental.theme_overrides": {
    "modified": "#928272",
    "created": "#427265",
    "warning.background": "#423222",
    "warning.border": "#524232",
    "scrollbar.thumb.background": "#333",
    "terminal.ansi.bright_black": "#888",
    "hint": "#444", // git blame etc
    "predictive": "#444",
    //   "editor.background": "#222",
    //   "background": "#222",
    //   "terminal.background": "#222",
    //   "title_bar.background": "#222",
    //   "border": "#333",
    //   "editor.gutter.background": "#222",
    //   "panel.background": "#222",
    //   "info.background": "#222",
    //   "tab_bar.background": "#333",
    //   "tab.active_background": "#444",
    //   "tab.inactive_background": "#333",
    //   "status_bar.background": "#333",
    //   "toolbar.background": "#222",
    //   "editor.active_line.background": "#1d1d1d",
    //   "element.selected": "#F00",
    "players": [
      {
        "selection": "#36301d"
      }
    ]
    //   "syntax": {
    //     "comment": {
    //       "font_style": "italic"
    //     }
    //   }
  }
}
